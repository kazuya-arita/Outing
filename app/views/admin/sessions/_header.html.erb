 <header class="shadow-sm bg-light">
  <div class="container">
    <div class="row">

       <% if admin_signed_in? %>
        <div class="col-2 d-flex align-items-center">
         <%= link_to admin_path, class: 'text-dark' do %>
          <%= image_tag 'Outing.jpg' %>
         <% end %>
        </div>

        <div class="col-4 d-flex align-items-center justify-content-center">
         <%= link_to destroy_admin_session_path, method: :delete, class: 'text-dark' do %>
          <h4><i class="fa-solid fa-right-from-bracket"></i></h4>
         <% end %>
        </div>

        <div class="col-5 dflex align-items-center">
          <%= render "admin/searchs/form" %>
        </div>
       <% else %>
        <div class="col-2 text-center">
         <%= link_to admin_path, class: 'nav-link text-dark' do %>
          <%= image_tag 'Outing.jpg' %>
         <% end %>
        </div>>

        <div class="col-3 d-flex align-items-center">
         <%= link_to new_admin_session_path, class: 'nav-link text-dark' do %>
          <h4><i class="fa-solid fa-right-to-bracket"></i></h4>
         <% end %>
        </div>

        <div class="col-5 text-center mt-2">
          <%= render "admin/searchs/form" %>
        </div>
       <% end %>

    </div>
  </div>
</header>