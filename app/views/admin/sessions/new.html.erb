<%= render "admin/sessions/header" %>

<% flash.each do |message_type, message| %>
  <div class="flash-message <%= message_type %>"><%= message %></div>
<% end %>

<div class="container mt-3">
  <div class="row">
    <div class="col-3 offset-4">
      <div class="bg-primary rounded mb-3">
        <h3>管理者ログイン</h3>
      </div>
    </div>

    <div class="col-8 col-lg-4 offset-3 offset-lg-4">
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="field">
          <%= f.label "Eメール" %><span class="necessary">*</span><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label "パスワード" %><span class="necessary">*</span><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions mt-3">
          <%= f.submit "ログイン", class: "btn btn-success" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
