<%= render "admin/sessions/header" %>

<% if @model == "User" %>
  <div class="container mt-3">
    <div class="row">
      <% if @users.any? %>
        <div class="col-8 offset-2">
          <div class="table">
            <table>
              <thead>
                <tr>
                  <th></th>
                  <th>ニックネーム</th>
                  <th>ユーザーネーム</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td>
                      <%= link_to admin_user_path(user.id) do %>
                       <%= image_tag user.get_profile_image(50, 50), class: "rounded-circle"; %>
                      <% end %>
                    </td>
                    <td><%= user.nickname %></td>
                    <td><%= user.user_name %></td>
                    <td><%= user.introduction %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      <% else %>
        <div class="col-8 offset-4">
          <h5>検索結果はありません</h5>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <% if @post_items.any? %>
    <%= render "admin/homes/list" %>
  <% else %>
    <div class="col-8 offset-4">
      <div class="container mt-3">
        <div class="row">
          <h5>検索結果はありません</h5>
        </div>
      </div>
    </div>
  <% end %>
<% end %>