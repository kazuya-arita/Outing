<%= render "admin/sessions/header" %>

<div class="container mt-3">
  <div class="row">
    <div class="col-3">
      <div class="bg-primary rounded">
        <h3>ユーザー情報</h3>
      </div>
    </div>
  </div>
</div>


<div class="container mt-3 mb-3 border-bottom border-black">
  <div class="row">
    <div class="col-1 offset-1">
      <%= image_tag @user.get_profile_image(100, 100), class: "rounded-circle"; %>
    </div>

    <div class="col-3 d-flex align-items-center ml-5">
      <h5>
        ニックネーム：<%= @user.nickname %><br>
        ユーザー名：<%= @user.user_name %>
      </h5>
    </div>

    <div class="col-2 offset-4 d-flex align-items-center">
      <h5><%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn-success" %></h5>
    </div>
  </div>

  <div class="row mt-3 mb-3">
    <div class="col-8 offset-2">
      <h5 class="border"><%= @user.introduction %></h5>
    </div>
  </div>

</div>

<%= render "admin/homes/list" %>