<% if user_signed_in? %>
  <% if post_item.user.released? %>
    <% if current_user.repost_item?(post_item.id) %>
      <%= link_to post_item_repost_items_path(post_item.id), method: :delete do %>
        <i class="fa-solid fa-repeat"></i>
        <%= post_item.repost_items.count %>
      <% end %>
    <% else %>
      <%= link_to post_item_repost_items_path(post_item.id), method: :post do %>
        <i class="fa-solid fa-repeat"></i>
        <%= post_item.repost_items.count %>
      <% end %>
    <% end %>
  <% else %>
    <i class="fa-solid fa-repeat.nonactive"></i> 
  <% end %>  
<% else %>
  <i class="fa-solid fa-repeat.nonactive"></i>
  <%= post_item.repost_items.count %>
<% end %>