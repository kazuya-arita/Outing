<%= render "public/sessions/header" %>

<% flash.each do |message_type, message| %>
  <div class="flash-message <%= message_type %>"><%= message %></div>
<% end %>

<div class="container mt-3">
  <div class="row">
    <div class="col-3">
      <div class="bg-primary rounded">
        <h3>ユーザー編集</h3>
      </div>
    </div>
  </div>
</div>


<div class="container mt-3 border-bottom border-black">
  <div class="row">
    <%= form_with model: @user do |f| %>
      <div class="col-4 offset-1 mb-3">
        <h5>
          <label>プロフィール画像</label>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </h5>
      </div>

      <div class="col-4 offset-1 mb-3">
        <h5>
          <label>ニックネーム</label>
          <%= f.text_field :nickname %>
          <label class="mt-3">ユーザー名</label>
          <%= f.text_field :user_name %>
        </h5>
      </div>

      <div class="col-4 offset-1 mb-3">
        <h5>
          <label>自己紹介文</label>
          <%= f.text_area :introduction %>
        </h5>
      </div>

      <div class="col-6 offset-1 d-flex align-items-center">
        <h5><%= f.submit "保存する", class: "btn btn-success mr-5" %></h5>
        <h5><%= link_to "アカウントを削除する", users_confirm_path, class: "btn btn-danger" %></h5>
      </div>
    </div>
  <% end %>

</div>

