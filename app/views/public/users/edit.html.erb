<%= render "public/sessions/header" %>

<div class="container mt-3">
  <div class="row">
    <div class="col-3">
      <div class="bg-primary rounded">
        <h3>ユーザー編集</h3>
      </div>
    </div>
  </div>
</div>


<div class="container mt-3 border-bottom border-black">
  <div class="row">
    <%= form_with model: @user do |f| %>
      <div class="col-1 offset-1">
        <h5>
          <label>プロフィール画像</label>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </h5>
      </div>

      <div class="col-3 d-flex align-items-center ml-5">
        <h5>
          <label>ニックネーム</label>
          <%= f.text_field :nickname %>
          <label>ユーザー名</label>
          <%= f.text_field :user_name %>
        </h5>
      </div>

      <div class="col-2 offset-4 d-flex align-items-center">
        <h5><%= f.submit "保存する", class: "btn btn-success" %></h5>
      </div>

      <div class="col-8 offset-2">
        <h5>
          <label>自己紹介文</label>
          <%= f.text_area :introduction %>
        </h5>
      </div>
    </div>
  <% end %>

</div>

