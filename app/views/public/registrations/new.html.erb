<%= render "public/sessions/header" %>

<% flash.each do |message_type, message| %>
  <div class="flash-message <%= message_type %>"><%= message %></div>
<% end %>

<%= render "public/shared/error_messages", resource: resource %>

<div class="container mt-3">
  <div class="row">
    <div class="col-6 col-sm-4 col-md-3 col-lg-2 offset-3 offset-lg-4">
      <div class="bg-primary rounded mb-3">
        <h3>新規登録</h3>
      </div>
    </div>

    <div class="col-8 offset-3 offset-lg-4">
      <%= form_with model: @user, url: user_registration_path do |f| %>

        <div class="field">
          <%= f.label "ニックネーム" %><br />
          <%= f.text_field :nickname %>
        </div>

        <div class="field">
          <%= f.label "ユーザーネーム" %><br />
          <%= f.text_field :user_name %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions mt-3">
          <%= f.submit "登録", class: "btn btn-success" %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
