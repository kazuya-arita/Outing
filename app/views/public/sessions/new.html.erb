<%= render "public/sessions/header" %>

<% flash.each do |message_type, message| %>
  <div class="flash-message <%= message_type %>"><%= message %></div>
<% end %>

<div class="container mt-3">
  <div class="row">
    <div class="col-6 col-sm-4 col-md-4 col-lg-2 offset-3 offset-lg-4">
      <div class="bg-primary rounded mb-3">
        <h3>ログイン</h3>
      </div>
    </div>

    <div class="col-8 col-lg-4 offset-3 offset-lg-4">
      <%= form_with model: @user, url: user_session_path do |f| %>

        <div class="field">
          <%= f.label "ユーザーネーム" %><span class="necessary">*</span><br />
          <%= f.text_field :user_name %>
        </div>

        <div class="field mt-3">
          <%= f.label :password %><span class="necessary">*</span><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions mt-3">
          <%= f.submit "ログイン", class: "btn btn-success" %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
