 <header class="shadow-sm bg-light">
  <div class="container">
    <div class="row">

       <% if user_signed_in? %>
        <div class="col-2 d-flex align-items-center">
         <%= link_to post_items_path, class: 'text-dark' do %>
          <h1>Outing!</h1>
         <% end %>
        </div>

        <div class="col-1 d-flex align-items-center offset-1">
         <%= link_to new_post_item_path, class: 'text-dark' do %>
          <h4><i class="fa-solid fa-pen-to-square"></i></h4>
         <% end %>
        </div>

        <div class="col-1 d-flex align-items-center">
         <%= link_to user_path(current_user.id), class: 'text-dark' do %>
          <h4><i class="fa-solid fa-user"></i></h4>
         <% end %>
        </div>

        <div class="col-1 d-flex align-items-center">
         <%= link_to favorites_user_path(current_user), class: 'text-dark' do %>
          <h4><i class="fa-solid fa-heart"></i></h4>
         <% end %>
        </div>

        <div class="col-1 d-flex align-items-center">
         <%= link_to destroy_user_session_path, method: :delete, class: 'text-dark' do %>
          <h4><i class="fa-solid fa-right-from-bracket"></i></h4>
         <% end %>
        </div>

        <div class="col-4 d-flex align-items-center">
          <%= form_tag('/search', method: :get, class: 'search-form') do %>
            <%= text_field_tag :search %>
            <%= submit_tag 'Search', :name => nil, class: "btn btn-primary" %>
          <% end %>
        </div>
       <% else %>
        <div class="col-2 text-center">
         <%= link_to post_items_path, class: 'nav-link text-dark' do %>
          <h1>Outing!</h1>
         <% end %>
        </div>

        <div class="col-1 d-flex align-items-center offset-1">
         <%= link_to new_user_registration_path, class: 'nav-link text-dark' do %>
          <h4><i class="fa-solid fa-user-plus"></i></h4>
         <% end %>
        </div>

        <div class="col-1 d-flex align-items-center">
         <%= link_to new_user_session_path, class: 'nav-link text-dark' do %>
          <h4><i class="fa-solid fa-right-to-bracket"></i></h4>
         <% end %>
        </div>

        <div class="col-5 d-flex align-items-center">
          <%= form_tag('/search', method: :get, class: 'search-form') do %>
            <%= text_field_tag :search %>
            <%= submit_tag 'Search', :name => nil, class: "btn btn-primary" %>
          <% end %>
        </div>
       <% end %>

    </div>
  </div>
</header>