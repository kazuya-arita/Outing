<div class="card-list-container py-5">
  <% @post_items.each do |post_item| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_item_path(post_item.id) do %>
      <%= image_tag post_item.get_image, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag post_item.user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(post_item_path(post_item.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= post_item.address %></span></strong>
            <% end %>
          </p>
          <p class="card-text"><%= post_item.post_item %></p>
          <span><i class="fas fa-user"></i> By <%= post_item.user.nickname %> ｜ </span>
          <span><%= link_to "#{post_item.post_comments.count}コメント", post_item_path(post_item.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  
</div>