<%= render "public/sessions/header" %>

<div class="card-list-container py-5">
  <div class="card mx-auto mt-4 shadow-lg" style="width: 55rem;">
    <%= image_tag @post_item.get_image, class:"card-img-top"; %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= link_to user_path(@user.id) do %>
           <%= image_tag @post_item.user.get_profile_image(100,100), class:"mt-3 rounded-circle"; %>
          <% end %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <strong><%= @post_item.user.nickname %> (<%= @post_item.user.user_name %>) </strong>
          </p>
          <p class="card-text">
            <%= @post_item.post_item %>
          </p>
          <p>
            <i class="fa-solid fa-location-dot"></i>
            <span><%= @post_item.address %></span>
          </p>
          <span>
            <div>
              <p>コメント件数：<%= @post_item.post_comments.count %></p>
              <% @post_item.post_comments.each do |post_comment| %>
                <p><%= image_tag post_comment.user.get_profile_image(100,100) %></p>
                <%= post_comment.user.nickname %>
                <%= post_comment.created_at.strftime('%Y/%m/%d') %>
                <%= post_comment.comment %>
                <% if post_comment.user == current_user %>
                  <%= link_to "削除", post_item_post_comments_path(post_comment.comment, post_comment), method: :delete %>
                <% end %>
              <% end %>
            </div>

            <div>
              <%= form_with model:[@post_item, @post_comment] do |f| %>
                <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
                <%= f.submit "送信する" %>
              <% end %>
            </div>


            <% if @post_item.favorited_by?(current_user) %>
              <p>
                <%= link_to post_item_favorites_path(@post_item), method: :delete do %>
                  ♥<%= @post_item.favorites.count %> いいね
                <% end %>
              </p>
              <% else %>
              <p>
                <%= link_to post_item_favorites_path(@post_item), method: :post do %>
                  ♡<%= @post_item.favorites.count %> いいね
                <% end %>
              </p>
            <% end %>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>